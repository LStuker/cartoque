@import 'mixins';

.no_result { margin-top:20px; text-align:center; color:#333; font-style:italic; }
#contact_general, #company_general {
  table { border:none; margin-top:20px; }
  input.short { width:8em; }
  input.long { width:22em; }
  #contact_identity input, #company_identity input {
    font-size:150%; font-weight:bold; width:11em;
    &:first-child { margin-right:0.2em; }
  }
  td.top { vertical-align:top; padding-top:1em; }
}
#contact_informations, #company_informations, .contact_relations, .company_relations {
  div.actions, h2 { height:20px; padding:0; vertical-align:middle; margin:4px 0; line-height:20px; }
}
.image_url_form {
  div.image_container { margin:7em 0 auto auto; width:70px; font-size:80%; color:#aaa; text-align:center; }
  div.image {
    margin:3px auto; padding:4px 2px 2px 4px; width:68px; height:68px; border:1px solid #aaa; cursor:pointer;
    img { width:64px; height:64px; }
  }
}
.contact_card, .company_card {
  margin:8px 0; padding-left:40px; background-repeat:no-repeat; background-position:4px 6px;
  @include transition(all, .1s);
  .informations { min-height:34px; }
  .action-links { margin-top:2px; }
  .action-links img { opacity:0; }
  &:hover .action-links img { opacity:1; }
  &:hover { border:1px solid #bbb; }
  &.active { border:1px solid #888; }
  h5 { font-size:14px; font-weight:bold; margin:0; padding:0; line-height:20px; }
  a { color:#00b; }
  .contact_position, .company_members { font-size:100%; font-style:italic; margin-top:1px; }
  p {
    font-size:90%; color:#666; padding:1px 2px;
    a, a:hover { color:#666; }
    a:hover { text-decoration:underline; }
  }
}
.more_contacts, .more_companies {
  padding:5px; font-style:italic;
  a { color:#555; }
}
#search_contacts {
  width:100%; font-size:140%; color:#222; padding:4px 4px 2px 24px; margin:3px 0 2px 0; @include border-radius(4px);
  background-image:url(<%= asset_path('search.png') %>); background-repeat:no-repeat; background-position:6px 50%; @include box-sizing(border-box);
}
.contacts_filter {
  padding:0 0 15px 0;
}
.contacts_sort_by {
  padding-right:3px; color:#555;
  .current { text-decoration:underline; }
  /* http://hedgerwow.appspot.com/demo/arrows */
  .current .arrow      {  border-style:dashed; border-color:transparent; border-width:0.5em; display:-moz-inline-box; display:inline-block;
                          font-size:7px; margin:0 0.2em 2px 0.2em; height:0; width:0; line-height:0; position:relative; vertical-align:middle; }
  .current.asc  .arrow {  border-bottom-width:0.5em; border-bottom-style:solid; border-bottom-color:#22c; bottom:0.2em; }
  .current.desc .arrow {  border-top-width:0.5em; border-top-style:solid; border-top-color:#00b; top:0.2em; }
}
.contacts_view_internals {
  padding-right:20px; color:#555;
  input[type="checkbox"] { position:relative; top:-1px; }
}
#contacts_actions {
  text-align:center; width:100%; float:right; margin:3px -20px 5px 0; padding:4px 10px; background-color:#fcfcfc; border:1px solid #ddd;
  h2 { margin:4px; }
  p {
    padding:5px; font-style:italic; font-size:90%; color:#444; line-height:150%; margin-bottom:10px;
    .button-add, .button-mail { margin:5px auto; font-style:normal; font-weight:bold; color:#333; }
  }
}
