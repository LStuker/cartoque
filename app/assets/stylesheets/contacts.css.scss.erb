@import 'mixins';

#contact_general, #company_general {
  table { border:none; margin-top:20px; }
  input.short { width:8em; }
  input.long { width:23em; }
  #contact_identity input, #company_identity input { font-size:150%; font-weight:bold; width:12em; margin-right:4px; }
  td.top { vertical-align:top; padding-top:1em; }
}
#contact_informations, #company_informations {
  div.actions { margin:1.2em auto; }
}
.image_url_form {
  div.image_container { margin:7em 0 auto auto; width:70px; font-size:80%; color:#aaa; text-align:center; }
  div.image {
    margin:3px auto; padding:4px 2px 2px 4px; width:68px; height:68px; border:1px solid #aaa; cursor:pointer;
    img { width:64px; height:64px; }
  }
}
.contact_card, .company_card {
  margin:8px 0; padding:5px 5px 5px 44px; background-color:#fcfcfc; background-repeat:no-repeat; background-position:6px 8px;
  min-height:3.2em; border:1px solid #eee; @include transition(all, .1s);
  &:hover { border:1px solid #bbb; @include box-shadow(#aaa, 0, 0, 5px); }
  h5 { font-size:15px; font-weight:bold; margin:0; padding:0; line-height:20px; }
  .contact_position { font-size:100%; font-style:italic; margin-top:1px; }
  p {
    font-size:90%; color:#666; margin-top:4px;
    a, a:hover { color:#666; }
    a:hover { text-decoration:underline; }
  }
}
.more_contacts, .more_companies {
  padding:5px; font-style:italic; color:#555;
}
