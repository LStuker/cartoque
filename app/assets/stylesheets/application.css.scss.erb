  .device { padding-left:2px; margin-bottom:2px; background-color:#eee; }
  .infos { text-align:left; margin-bottom:2px; font-size:100%; }
  td.global { font-size:110%; padding:12px; }
  td.details { white-space:nowrap; padding:6px; }
  td.details * { margin-bottom:0; }
  td.top { vertical-align:top; padding-top:1.8em; }
  table.progress td.closed { background:#777 none repeat scroll 0%; }
  table.storage-array { font-size:90%; border-collapse:collapse; border-left:none; margin-right:0; }
  tr.storage-array > td { padding:3px; white-space:nowrap; text-align:left; border-right:none; border-left:none; }
  tr.storage-array:last-child > td { border-bottom:none; }
  tr.storage-array > td:first-child { font-size:95%; }
  table.storage-array td.closed { background:#999 none repeat scroll 0%; }
  .unassigned { font-size:90%; color:#cb2; font-style:italic; font-weight:bold; float:right; padding-right:2px; }
}

/* applications */
#server_applications tr.multiselect td {
  &:first-child { display:none; }
  &:last-child { /*border-left:1px solid #ccc;*/ }
}
#applications_list tr td:first-child { line-height:16px; }
#application_general td.content { text-align:center; }
#application_instances .instance-fields { border:none; border-bottom:1px solid #ddd; padding:0.5em 0; margin-bottom:1em; }
.instance-fields {
  th, tr.th td, th:first-child, td, td:first-child { border:none; margin:0; padding:0.2em; border-bottom:none; vertical-align:top; }
  td.label { width:60px; padding-top:0.6em !important; }
}
#application_instances .fields .link-delete img { position:relative; top:-2px; margin-left:3px; }
.application_instance { width:100%; margin-bottom:5px; font-size:100%; }
.links {
  padding-right:6px;
  a, a:link, a:visited, a:hover { text-decoration:none; font-weight:bold; font-size:10px; padding:1px 2px; @include border-radius(2px); }
}
a.link-to-redmine { color:#a22; }
a.link-to-redmine:hover { color:#fff; background-color:#a22; }
a.link-to-nagios { color:#000; }
a.link-to-nagios:hover { color:#fff; background-color:#000; }
a.link-to-munin { color:#227; }
a.link-to-munin:hover { color:#fff; background-color:#227; }
a.link-to-dokuwiki { color:#272; }
a.link-to-dokuwiki:hover { color:#fff; background-color:#272; }

/* tomcats, databases */
table.databases {
  width:100%;
  #databases_list {
    td, th:last-child, td, th:last-child { border-right:1px solid #ccc; }
  }
}
.database_nodes, .tomcat_vips { margin:0; display:block; padding:0 0 0 1.5em; list-style-type:none; color:#666; font-size:90%; }
ul.databases-details { margin:0; position:relative; display:block; padding:0; list-style-type:none; }
.offset { padding-left:1em; }
.csacok { font-weight:bold; color:green; }
.csacko { font-weight:bold; color:red; }
.server_tomcats {
  ul { margin-left:1em; }
  li { padding:0.3em 0; }
}
.tomcat-crons {
  h2 { border-bottom:1px solid #eee; margin:6px 0; }
  .contextual { margin:8px 20px 0 0; font-size:90%; }
  .tomcat-cron { width:900px; margin:10px 0; }
  pre { overflow-x:auto; max-width:900px; background:#fcfcff; @include box-shadow(#ccc, 0, 0, 8px); font:90% "Lucida Console", monospace; padding:6px 5px; }
  code { position:relative; top:-1px; padding:2px 4px; font-size:100%; border:1px solid #f8f8f8; }
}

/* servers */
.virtual-server { font-weight:bolder; color:#3a3; }
.virtual-server-right { float:right; }
.hidden-if-virtual.virtual { display:none; }
.maintenance-warning { color:#f80; }
.maintenance-critical { font-weight:bold; color:#d00; }
.server-mainteneur { margin:0; position:relative; display:block; padding:0 0 0 2em; list-style-type:none; }
.mainteneur-infos ul { font-size:90%; margin:0.5em; }
ul.mainteneur { font-size:90%; margin:0.2em 0.5em; }
.database_servers li { margin:4px auto; }
.server-details { font-size:90%; display:inline-block; background-color:#eee; color:#335;
                   padding:1px 6px; margin:0 6px; border:1px solid #ccd; @include border-radius(10px); }
#server_general {
  ul.collection { text-align:left; margin-left:0; margin-top:0; font-size:90%; }
  .link-arrow { font-size:150%; }
  .link-fc .link-arrow { color:#ea0; }
  .link-eth .link-arrow { color:#00a; }
}
#server_general th.server_name, #application_general th.application_name { text-transform:uppercase; font-size:150%; }
#server_name, #application_name { font-size:150%; font-weight:bold; }

/* operating systems */
.operating_systems {
  td { padding:0; }
  th { text-align:left; }
  th .contextual { padding-right:24px; }
}
.operating_system {
  margin:0; padding:5px 3px 5px 8px;
  > .contextual { margin-left:10px; }
  .servers-count { width:50px; margin:0 0 0 20px; padding:0; text-align:right; }
}
.nested-os {
  margin-left:10px;
  .operating_system { padding-left:16px; background-image: url(<%= asset_path 'bullet_arrow_right.png' %>);
                      background-position:left center; background-repeat:no-repeat; }
}
.os-icon { margin:0 2px -2px 0; }

/* nss */
#nss_volumes {
  .nss-san .snap-yes { color:#1a1; }
  .nss-san .snap-no { color:#e11; }
}
/* progress bars */
table.progress {
  border-collapse:collapse; border-spacing:0; empty-cells:show; text-align:center; margin:2px 0 5px;
  td { border:1px solid #ccc; height:0.8em; font-size:90%; padding:1px; }
  td.closed { background:#aaa none repeat scroll 0%; }
  td.done { background:#DEF0DE none repeat scroll 0%; }
  td.open { background:#FFF none repeat scroll 0%; }
  td.legend { border:none; padding-left:6px; text-align:right; }
}
p.progress-info { clear:left; font-style:italic; font-size:90%; }

/* tools */
ul.comparison {
  margin:5px; list-style-type:none; display:block; clear:both;
  li { margin:0; float:left; margin:2px; padding:3px 5px; background-color:#f8f8f8; border:1px solid #eee; }
}
.symetry {
  th, td { border-right:1px solid #ccc; text-align:center; }
  td { padding:0.2em 1em; }
  tr td:first-child { font-weight:bold; padding:0.2em; text-align:left; }
  tr.identical td:first-child { color:green; }
  tr.different td:first-child { color:red; }
}

/* diff */
.diff {
  overflow:auto;text-align:left;
  .zunchanged { display:none; }
  ul { background:#fff; overflow:auto; font-size:13px; list-style:none; margin:0; padding:0; display:table; width:100%; }
  del, ins { display:block; text-decoration:none; }
  li { padding:0; display:table-row; margin:0; height:1em; }
  li.ins { background:#dfd; color:#080 }
  li.del { background:#fee; color:#b00 }
  li:hover { background:#ffc }
  /* try 'whitespace:pre;' if you don't want lines to wrap */
  del, ins, span { white-space:pre-wrap; font-family:courier; }
  del strong { font-weight:normal; background:#fcc; }
  ins strong { font-weight:normal; background:#9f9; }
}

/* graphs */
.graph-links { text-align:right; margin:5px 15px 5px 0; }
.graph-container { background-color:#fafafa; @include box-shadow(#ccc, 0, 0, 6px); margin:6px; }
.graph { margin:0 auto; }
svg a:hover { cursor:pointer; }

/* fixed elements */
tr.fix-on-scroll.fixed { border-top:none; }
tr.fixed {
  position:fixed; top:0; z-index:150;
  td, th {
    border-top:none !important;
    &:first-child { border-left:none; }
  }
}

/* bugs with chrome+td[multirow] */
.chrome-bug-on-scroll {
  border-top:none !important;
  th {
    border-top:1px solid #ccc;
    &:last-child { border-right:none; }
  }
}

/* reset some styles on hover/focus/etc. */
::-moz-selection, ::-webkit-selection, ::selection { background:#c00; color:#fff; text-shadow:none; }
