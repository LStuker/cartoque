@import 'mixins';
/* related CIs */
.show {
  padding-top:0.5em;
  & > table { border-color:#e6e6e6; }
  .links a { font-size:15px; }
  .description { padding:4px 10px; font-size:85%; }
  .content { padding:4px 10px; }
}
.related-ci {
  margin:2px 0 3px; padding:0 0 0 24px;
  background-position:4px 50%; background-repeat:no-repeat; background-color:#eaeaea;
  border:1px solid #ccc; color:#666; @include transition(all, .1s);
  &:hover { border:1px solid #bbb; @include box-shadow(#ccc, 0, 0, 5px); }
  a {
    color:inherit; text-decoration:none;
    &:hover { color:#e06; text-decoration:none; }
  }
  .informations {
    min-height:26px; padding:2px 6px; border-left:1px solid #ccc; @include gradient(#fff,#f4f4f4); color:#777;
    h3 { font-size:12px; font-weight:bold; color:#444; }
    ul { margin-left:1em; font-size:10px; }
    .tinier { font-weight:normal; }
    .tinier.contextual { padding-top:2px; }
    .details { font-size:10px; font-style:italic; color:#777; }
  }
}
.related-ci-big {
  margin:8px 0;
  &:hover { box-shadow: none; }
  .informations {
    padding: 5px 5px 5px 7px;
    h3 { font-size:15px; }
  }
}
