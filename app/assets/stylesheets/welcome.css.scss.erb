#welcome-container { margin:2em auto; }
h1.welcome { font-family:'Lobster', serif; font-size:40px; font-style:normal; font-weight:400;
             text-shadow:2px 2px 2px #aaa; text-decoration:none; text-transform:none; letter-spacing:0em;
             word-spacing:0em; line-height:1em; margin-top:0.5em; text-align:center; }
.welcome-box {
  float:none; padding:0; min-height:150px;
  .details { margin:0; position:relative; display:block; padding:0 0 0 1em; list-style-type:none; color:#666; font-size:90%; }
  > table, .welcome-box > div { width:100%; }
  td { padding:6px 8px; border-right:1px solid #ccc; }
}

