<tr id="fix-on-scroll">
  <th style="width:3em">Liens</th>
  <%= sortable_th "criticity", nil, :style => "width:3em" %>
  <%= sortable_th "name", nil, :style => "width:10em" %>
  <th>Description</th>
  <th style="width:3em">I2 Ader Web</th>
  <th style="width:3em">ACAI Messagerie Sp√©cifique</th>
  <th class="actions" style="width:6em">Actions</th>
</tr>
<% for application in @applications %>
  <tr>
    <td class="center"><%= links_for application %></td>
    <td class="center"><%= application.criticity %></td>
    <td><%= link_to application.name, application %></td>
    <td><%= application.info %></td>
    <td class="center"><%= application.iaw %></td>
    <td class="center"><%= application.ams %></td>
    <td class="actions">
      <%= action_links do %>
        <%= link_to "edit", edit_application_path(application) %>&nbsp;|&nbsp;<%= link_to "suppr", application,
                    :confirm => t(:text_confirm_delete, :element => application.name), :method => :delete %>
      <% end %>
    </td>
  </tr>
<% end %>
