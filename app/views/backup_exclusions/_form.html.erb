<div class="span12 center">

<%= simple_form_for(@backup_exclusion) do |f| %>
  <%= action_links do %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= t(:or) %> <%= link_to t(:back_to_the_list), backup_exclusions_path %>
  <% end %>

  <table class="show_item" style="width:100%">
    <tbody>
      <%= tabular_errors @backup_exclusion %>
      <%= f.input :reason, input_html: { size: "60x5" } %>
      <tr>
        <td class="label"><%= f.label :servers, class: "input" %></td>
        <td class="multiselect">
          <%= f.input_field :server_ids, collection: Server.not_backuped.order_by(:name.asc) + @backup_exclusion.servers, as: :multiselect %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

</div>
