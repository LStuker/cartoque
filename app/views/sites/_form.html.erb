<div class="span9 center">

<%= simple_form_for(@site) do |f| %>
  <%= action_links do %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= t(:or) %> <%= link_to t(:back_to_the_list), sites_path %>
  <% end %>

  <table class="show_item">
    <tbody>
      <%= tabular_errors @site %>
      <%= f.input :name, required: true, wrapper_class: "th" %>
    </tbody>
  </table>
<% end %>

</div>
