<% title t(:hosting_rooms) %>

<div class="grid_9 center">

<%= action_links do %>
  <%= link_to t(:new_hosting_room), new_site_path %>
<% end %>

<table class="pretty list">
<thead>
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:physical_racks) %></th>
    <th><%= t(:servers) %></th>
    <th></th>
  </tr>
</thead>
<tbody class="long-list">
<% @sites.each do |site| %>
  <tr>
    <td><%= link_to site.name, edit_site_path(site) %></td>
    <td class="center"><%= @racks_count[site.id] || 0 %></td>
    <td class="center"><%= @servers_count[site.id.to_s] || 0 %></td>
    <td><%= link_to_delete site %></td>
  </tr>
<% end %>
<% if @racks_count[nil] || @servers_count[nil] %>
  <tr>
    <td><em><%= t(:unknown) %></em></td>
    <td class="center"><%= @racks_count[nil] || 0 %></td>
    <td class="center"><%= @servers_count[nil] || 0 %></td>
    <td></td>
  </tr>
<% end %>
</tbody>
</table>

</div>
