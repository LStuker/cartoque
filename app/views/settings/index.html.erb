<% title t(:global_parameters) %>

<div class="grid_9">

<%= form_tag update_all_settings_path, :method => :put do %>
<table id="settings" class="pretty">
  <tr>
    <th><%= t(:cas_server_url) %></th>
    <td>
      <%= text_field_tag 'settings[cas_server]', Settler[:cas_server], :size => 35 %>
    </td>
  </tr>
  <tr>
    <th><%= t(:redmine_url) %></th>
    <td>
      <%= text_field_tag 'settings[redmine_url]', Settler[:redmine_url], :size => 35 %>
    </td>
  </tr>
  <tr>
    <th><%= t(:service_message) %></th>
    <td>
      <%= text_area_tag 'settings[site_announcement_message]', Settler[:site_announcement_message], :size => "70x2" %><br />
      <%= t(:theme) %>: <%= select_tag 'settings[site_announcement_type]',
                            options_for_select(%w(info success warning error).map{|a| [a,a]}, Settler[:site_announcement_type]) %>
    </td>
  </tr>
  <tr>
    <th><%= t(:dns_domains) %></th>
    <td>
      <%= text_area_tag 'settings[dns_domains]', Settler[:dns_domains], :size => "70x8" %><br />
    </td>
  </tr>

  <tr>
    <td></td>
    <td><%= submit_tag t(:validate) %></td>
  </tr>
</table>
<% end %>

</div>
