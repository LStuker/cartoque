<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <meta charset="UTF-8">
    <%= stylesheet_link_tag "cartocs" %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="top-menu" class="hide-when-print">
      <div class="contextual">
        <%= render("#{controller.controller_name}/search") rescue "<i>Cartoque v#{Cartocs::VERSION}</i>".html_safe %>
      </div>
      <%= link_to "Accueil", root_path %>
      <%= link_to "Applications", applications_path %>
      <%= link_to "Bases", databases_path %>
      <%= link_to "Machines", machines_path %>
      <%= link_to "Stockage", storages_path %>
    </div>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag(:h1, yield(:title), :class => controller.controller_name) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
