<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <meta charset="UTF-8">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "jquery.bsmselect", "jquery.bsmselect-custom" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery.bsmselect", "jquery.bsmselect.compatibility", "jquery.bsmselect.sortable" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="top-menu" class="hide-when-print">
      <div class="contextual">
      <% if logged_in? && %w(index show).include?(controller.action_name) %>
        <%= render("#{controller.controller_name}/search")+"|" rescue nil %>
      <% end %>

      <% if logged_in? %>
        <span class="connected-as"><%= current_user.uid %></span> |
        <%= link_to "DÃ©connexion", signout_path %>
      <% else %>
        <%= link_to "Connexion", "/auth/cas" %>
      <% end %>
      </div>
      <%= link_to image_tag("home.png", :alt=>"Accueil"), root_path %>
      <% if logged_in? %> |
      <%= link_to "Applications", applications_path %>
      <%= link_to "Machines", machines_path %> | 
      <%= link_to "Tomcats", tomcats_path %>
      <%= link_to "Bases", databases_path %>
      <%= link_to "Stockage", storages_path %> |
      <%= link_to "Configuration", operating_systems_path %>
      <% end %>
    </div>
    <div id="container">
      <% if content_for?(:sidebar) %>
      <div id="sidebar">
        <%= yield(:sidebar) %>
      </div>
      <% end %>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag(:h1, yield(:title), :class => controller.controller_name) if show_title? %>
      <%= yield %>
    </div>
    <div class="clear"></div>
    <div id="footer">
      <%= show_version %>
    </div>
  </body>
</html>
