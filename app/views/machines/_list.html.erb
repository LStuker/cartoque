<%= action_links do %>
  <%= link_to "Ajouter une machine", new_machine_path %> |
  <%= link_to "Export PDF", machines_path(params.merge(:format => "pdf")) %> |
  <% if maintenance_mode? %>
    <%= link_to "Vue normale", machines_path(:view_mode => "normal") %>
  <% else %>
    <%= link_to "Vue maintenance", machines_path(:view_mode => "maintenance") %>
  <% end %>
<% end %>

<%= render(maintenance_mode? ? "list_maintenance" : "list_normal") %>
