<% title "Machine" %>

<div class="grid_12">
<%= action_links do %>
  <%= link_to 'Editer', edit_machine_path(@machine) %> |
  <%= link_to 'Supprimer', @machine, :confirm => t(:text_are_you_sure), :method => :delete %> |
  <%= link_to 'Retourner à la liste', machines_path %>
<% end %>
</div>

<div class="clear"></div>

<div id="machine_general" class="grid_3">
<table class="show_item full">
  <thead>
    <tr>
      <th colspan="2" class="machine_name">
        <%= @machine.name %>
        <% if @machine.virtual? %>
          <span class="virtual-machine">V</span>
        <% end %>
      </th>
    </tr>
  </thead>
  <%= show_for @machine do |s| %>
    <% if @machine.description.present? %>
    <tr class="wrapper machine_description">
      <td colspan="2">
        <%= @machine.description.capitalize %>
      </td>
    </tr>
    <% end %>
    <tr class="wrapper machine_ipaddresses">
      <td colspan="2">
        <label><%= t(:ipaddresses) %> :</label><br />
        <ul class="collection">
        <% @machine.ipaddresses.each do |ip| %>
          <li><%= ip %></li>
        <% end %>
        </ul>
      </td>
    </tr>
    <!--<%= s.attribute :server_type %>-->
    <%= s.attribute :operating_system %>
    <%= s.attribute :service %>
    <%= s.attribute :theme %>
    <!--<%= s.attribute :previous_name %>-->
  <% end %>
  <% unless @machine.virtual? %>
  <thead>
    <tr><th colspan="2">Maintenance</th></tr>
  </thead>
  <%= show_for @machine do |s| %>
    <%= s.attribute :mainteneur %>
    <%= s.attribute :delivered_on %>
    <%= s.attribute :maintained_until %>
    <%= s.attribute :contract_type %>
    <%= s.attribute :serial_number %>
  <% end %>
  <% end %>
</table>
</div>

<div id="machine_hardware" class="grid_3">
<table class="show_item full">
  <thead>
    <tr>
      <th colspan="2"><%= @machine.virtual? ? "Ressources" : "Matériel" %></th>
    </tr>
  </thead>
  <%= show_for @machine do |s| %>
    <%= s.attribute :physical_rack unless @machine.virtual? %>
    <%= s.attribute :fullmodel unless @machine.virtual? %>
    <%= s.attribute :cpu %>
    <%= s.attribute :memory %>
    <%= s.attribute :disks %>
    <%= s.attribute :media_drive unless @machine.virtual? %>
    <%= s.attribute :nb_rj45 %>
    <%= s.attribute :nb_fc %>
    <%= s.attribute :nb_iscsi %>
    <%= s.attribute :has_drac %>
  <% end %>
</table>
</div>

<div id="machine_relations" class="grid_3">
<table class="show_item full">
  <thead>
    <tr><th colspan="2">Applications liées</th></tr>
  </thead>
  <%= show_for @machine do |s| %>
    <tr class="wrapper machine_applications">
      <td colspan="2">
        <% if @machine.application_instances.any? %>
        <ul>
        <% @machine.application_instances.each do |instance| %>
          <li><%= link_to instance.fullname, instance.application %></li>
        <% end %>
        </ul>
        <% else %>
          Pas d'instance liée.
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
</div>

<div id="machine_ci" class="grid_3">
<% tomcats = Tomcat.find_for_server(@machine.name) %>
<% tomcats.delete_if{|t| t[:tomcat].blank?} %>
<% if tomcats.any? %>
<table class="show_item full">
  <thead>
    <tr><th colspan="2">Tomcats</th></tr>
  </thead>
    <tr class="wrapper machine_tomcats">
      <td colspan="2">
        <ul>
        <% tomcats.sort_by{|t| t[:tomcat].split("_").last.to_s}.each do |tomcat| %>
          <li>
            <p>
              <%= link_to tomcat[:tomcat], tomcats_path(:by_server => @machine.name) %>
              <span class="tinier"><%= "#{tomcat[:java_version]} #{tomcat[:java_xms]}/#{tomcat[:java_xmx]}" %></span>
            </p>
            <p class="tinier" style="padding-left:2em"><%= tomcat[:dns] %></p>
          </li>
        <% end %>
        <li class="tinier" style="padding-left:6em;"><em>Total Xmx: <%= tomcats.map{|t| t[:java_xmx].to_i}.sum %></em></li>
        </ul>
      </td>
    </tr>
</table>
<% end %>
</div>
