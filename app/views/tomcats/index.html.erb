<% title "Tomcats" %>

<div id="tomcats" class="items_list span12">

<%= render "submenu" %>

<table class="pretty list">
  <%= form_tag tomcats_path(params), id: "filters", method: :get do -%>
  <tr class="filters fixed-size">
    <td><%= select_tag "by_vip", options_for_select([["",""]] + Tomcat.all.distinct(:vip).sort, params[:by_vip]).html_safe -%></td>
    <td><%= text_field_tag 'by_server_name', params[:by_server_name] %></td>
    <td><%= select_tag "by_name", options_for_select([["",""]] + Tomcat.all.distinct(:name), params[:by_name]).html_safe -%></td>
    <td><%= select_tag "by_java_version", options_for_select([["",""]] + Tomcat.all.distinct(:java_version), params[:by_java_version]).html_safe -%></td>
    <td></td>
    <td></td>
    <td></td>
    <td><span id="tomcats_counter" class="counter"><%= @tomcats.count %></span></td>
  </tr>
  <% end %>
  <tbody id="tomcats_list" class="long-list">
    <%= render 'list' %>
  </tbody>
</table>

</div>
