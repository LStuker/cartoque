<div class="grid_9 center">

<%= simple_form_for(@component) do |f| %>
  <%= action_links do %>
    <%= f.button :submit %>
    <%= t(:or) %> <%= link_to t(:back_to_the_list), components_path %>
  <% end %>

  <table class="show_item">
    <tbody>
      <%= tabular_errors @component %>
      <%= f.input :name %>
      <%= f.input :website %>
      <%= f.input :description %>
    </tbody>
  </table>
<% end %>

</div>
