<% title t(:contacts) %>

<div class="grid_4">
  <%= action_links do %>
    <%= link_to t(:new_contact), new_contact_path %>
  <% end %>
  <div id="contacts_list">
    <% @contacts.each do |contact| %>
      <%= render :partial => 'contact', :object => contact %>
    <% end %>
    <%= content_tag(:p, t(:and_X_others, :value => @contacts_count - 10), :class => "more_contacts") if @contacts_count > 10 %>
  </div>
</div>

<div class="grid_4">
  <%= action_links do %>
    <%= link_to t(:new_company), new_company_path %>
  <% end %>
  <div id="companies_list">
    <% @companies.each do |company| %>
      <%= render :partial => 'companies/company', :object => company %>
    <% end %>
    <%= content_tag(:p, t(:and_X_others, :value => @companies_count - 10), :class => "more_companies") if @companies_count > 10 %>
  </div>
</div>
