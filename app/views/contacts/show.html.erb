<% title "Contact" %>

<div class="grid_12 center">

<%= action_links do %>
  <%= link_to 'Editer', edit_contact_path(@contact) %> |
  <%= link_to 'Supprimer', @contact, :confirm => t(:text_are_you_sure), :method => :delete %> |
  <%= link_to 'Retourner Ã  la liste', contacts_path %>
<% end %>

<table class="pretty">
  <thead>
    <tr>
      <th colspan="2">
        <%= @contact.first_name %>
        <%= @contact.last_name %>
      </th>
    </tr>
  </thead>
  <tbody>
    <%= show_for @contact do |s| %>
      <%= s.attribute :job_position %>
      <%= s.attribute :company %>
      <%= s.attribute :phone %>
      <%= s.attribute :mobile %>
      <%= s.attribute :email %>
      <%= s.attribute :comment %>
    <% end %>
  </tbody>
</table>

</div>
