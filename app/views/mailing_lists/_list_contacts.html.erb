<% @contacts.each do |contact| %>
  <%= render :partial => 'contact', :object => contact %>
<% end %>
<%= content_tag(:p, :class => "more_contacts") do %>
  <%= link_to t(:and_X_others, :value => @contacts.count - 25), contacts_path(params.merge(:all_contacts=>1))  %>
<% end if @contacts.count > 25 %>
<% if @contacts.count == 0 && params[:search_contact] %>
  <%= content_tag(:p, :class => "no_result") do %>
    <%= t(:no_contact_found) %>
  <% end %>
<% end %>
