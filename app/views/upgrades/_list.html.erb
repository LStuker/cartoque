<tr class="fix-on-scroll">
  <%= sortable_th 'server_name', t(:name), style: "width:14em" %>
  <th><%= t(:type) %></th>
  <th><%= t(:rebootable) %></th>
  <%= sortable_th 'count_total', t(:count), style: "width:2em" %>
  <th><%= t(:packages_list) %></th>
</tr>
<% for upgrade in @upgrades %>
  <%= render "upgrade", upgrade: upgrade %>
<% end %>
