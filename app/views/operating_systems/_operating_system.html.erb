<% total_servers = subtree.inject(0){|sum, descendant| sum + @os_servers_count[descendant] } %>
<div class="operating-system">
  <div class="contextual">
    <%= link_to image_tag("delete.png", :class => "inline", :size => "16x16"), operating_system,
                :confirm => t(:text_confirm_delete, :element => operating_system.name), :method => :delete %>
  </div>
  <div class="contextual servers-count">
    <%= @os_servers_count[operating_system.id] %>
  </div>
  <%= link_to operating_system.name, edit_operating_system_path(operating_system) %>
  <span class="tiny">(<%= total_servers %>)</span>
  <script type="text/javascript">
    serversmap[<%= operating_system.id %>] = <%= total_servers %>;
  </script>
</div>
