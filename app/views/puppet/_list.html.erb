<tr class="fix-on-scroll">
  <%= sortable_th "name", nil, :style => "min-width:10em" %>
  <th style="width:2em"><%= t(:virtual) %></th>
  <th style="width:2em">Puppet</th>
  <th style="width:12em"><%= t(:operating_system) %></th>
  <th style="width:9em"><%= t(:osrelease_facter) %></th>
  <th style="width:9em"><%= t(:puppetversion) %></th>
  <th style="width:9em"><%= t(:facterversion) %></th>
  <th style="width:9em"><%= t(:rubyversion) %></th>
</tr>
<% for server in @servers %>
  <tr class="has-opaques">
    <td>
      <div class="contextual opaque">
        <%= link_to_delete server %>
      </div>
      <%= link_to server.name, server %>
    </td>
    <td class="center"><% if server.virtual? %><span class="virtual-server">V</span><% end %></td>
    <td class="center"><% if server.puppetversion? %><span class="puppetized-server">P</span><% end %></td>
    <td><%= server.operating_system %></td>
    <td class="center"><%= server.operatingsystemrelease %></td>
    <td class="center"><%= server.puppetversion %></td>
    <td class="center"><%= server.facterversion %></td>
    <td class="center"><%= server.rubyversion %></td>
  </tr>
<% end %>
