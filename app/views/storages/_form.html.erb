<div class="grid_12 center">

<%= simple_form_for(@storage) do |f| %>
  <table class="show_item">
    <tbody>
      <%= tabular_errors @storage %>
      <%= f.association :server, required: true, wrapper_class: "th",
                        collection: Server.order("name").map{|m| [m.name, m.id]} %>
      <%= f.input :constructor, collection: Storage.supported_types %>
    </tbody>
  </table>

  <%= action_links do %>
    <%= f.button :submit %>
    <%= t(:or) %> <%= link_to <%= t(:back_to_the_list), storages_path %>
    <% unless @storage.new_record? %>
      | <%= link_to t(:show), @storage %>
    <% end %>
  <% end %>
<% end %>

</div>
