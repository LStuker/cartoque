<div class="grid_5 center">

<%= simple_form_for(@physical_rack) do |f| %>
  <%= action_links do %>
    <%= f.button :submit %>
    <%= t(:or) %> <%= link_to t(:back_to_the_list), physical_racks_path %>
  <% end %>

  <table class="show_item">
    <tbody>
      <%= tabular_errors @physical_rack %>
      <%= f.input :name, required: true, wrapper_class: "th" %>
      <%= f.input :site_id, :collection => Site.all %>
      <%= f.input :status, as: :select, include_blank: false,
                           collection: [[t(:rack_real),  PhysicalRack::STATUS_PROD],
                                           [t(:rack_stock), PhysicalRack::STATUS_STOCK]] %>
    </tbody>
  </table>
<% end %>

</div>
